<script>
  (function() {
    var tabPlanes   = document.getElementById('tabPlanes');
    var tabRecargas = document.getElementById('tabRecargas');
    var tablaPlanes = document.getElementById('tablaPlanes');
    var tablaRec    = document.getElementById('tablaRecargas');
    if (!tabPlanes || !tabRecargas) return;

    function activarPlanes() {
      tablaPlanes.style.display = 'block';
      tablaRec.style.display    = 'none';
      tabPlanes.style.background  = '#ffffff';
      tabPlanes.style.color       = '#111827';
      tabPlanes.style.fontWeight  = '600';
      tabRecargas.style.background = '#f9fafb';
      tabRecargas.style.color      = '#4b5563';
      tabRecargas.style.fontWeight = '500';
    }

    function activarRecargas() {
      tablaPlanes.style.display = 'none';
      tablaRec.style.display    = 'block';
      tabPlanes.style.background   = '#f9fafb';
      tabPlanes.style.color        = '#4b5563';
      tabPlanes.style.fontWeight   = '500';
      tabRecargas.style.background = '#ffffff';
      tabRecargas.style.color      = '#111827';
      tabRecargas.style.fontWeight = '600';
    }

    tabPlanes.addEventListener('click', function(e) { e.preventDefault(); activarPlanes(); });
    tabRecargas.addEventListener('click', function(e) { e.preventDefault(); activarRecargas(); });

    activarPlanes();
  })();
</script>

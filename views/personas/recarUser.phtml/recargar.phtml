  <script>
    (function() {
      var modal = document.getElementById('lkpPagoModal');
      var modalTarjeta = document.getElementById('lkpTarjetaModal');
      var modalEfectivo = document.getElementById('lkpEfectivoModal');
      if (!modal) return;

      function abrirModal(event) {
        if (event) event.preventDefault();
        modal.classList.add('lkp-open');
      }

      function cerrarModal(event) {
        if (event) event.preventDefault();
        modal.classList.remove('lkp-open');
      }

      function abrirTarjeta(event) {
        if (event) event.preventDefault();
        cerrarModal();
        if (modalTarjeta) {
          modalTarjeta.style.display = 'flex';
        }
      }

      function cerrarTarjeta(event) {
        if (event) event.preventDefault();
        if (modalTarjeta) {
          modalTarjeta.style.display = 'none';
        }
      }

      function abrirEfectivo(event) {
        if (event) event.preventDefault();
        cerrarModal();
        if (modalEfectivo) {
          modalEfectivo.style.display = 'flex';
        }
      }

      function cerrarEfectivo(event) {
        if (event) event.preventDefault();
        if (modalEfectivo) {
          modalEfectivo.style.display = 'none';
        }
      }

      var botones = document.querySelectorAll('.lkp-recargar-btn');
      for (var i = 0; i < botones.length; i++) {
        botones[i].addEventListener('click', abrirModal);
      }

      var btnCerrar = document.getElementById('lkpCerrarModal');
      if (btnCerrar) {
        btnCerrar.addEventListener('click', cerrarModal);
      }

      var btnTarjeta = document.getElementById('lkpPagarTarjeta');
      if (btnTarjeta) {
        btnTarjeta.addEventListener('click', abrirTarjeta);
      }

      var btnEfectivo = document.getElementById('lkpPagarEfectivo');
      if (btnEfectivo) {
        btnEfectivo.addEventListener('click', abrirEfectivo);
      }

      var cierresTarjeta = document.querySelectorAll('.lkp-tarjeta-close');
      for (var j = 0; j < cierresTarjeta.length; j++) {
        cierresTarjeta[j].addEventListener('click', cerrarTarjeta);
      }

      var cierresEfectivo = document.querySelectorAll('.lkp-efectivo-close');
      for (var k = 0; k < cierresEfectivo.length; k++) {
        cierresEfectivo[k].addEventListener('click', cerrarEfectivo);
      }

      // Evita cerrar al hacer click dentro del contenido
      var modalTarjetaBox = modalTarjeta.querySelector('.modal-card');
      if (modalTarjetaBox) {
        modalTarjetaBox.addEventListener('click', function(e) {
          e.stopPropagation();
        });
      }

      var modalEfectivoBox = modalEfectivo.querySelector('.modal-card');
      if (modalEfectivoBox) {
        modalEfectivoBox.addEventListener('click', function(e) {
          e.stopPropagation();
        });
      }

      // Cerrar al hacer click en el overlay oscuro
      modal.addEventListener('click', cerrarModal);
      if (modalTarjeta) {
        modalTarjeta.addEventListener('click', cerrarTarjeta);
      }
      if (modalEfectivo) {
        modalEfectivo.addEventListener('click', cerrarEfectivo);
      }
    })();
  </script>


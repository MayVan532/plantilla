<script>
  (function() {
    var btnNueva   = document.getElementById('btnNuevaPortabilidad');
    var modal      = document.getElementById('modalPortabilidad');
    var btnCerrar  = document.getElementById('btnCerrarModal');
    var btnCerrarX = document.getElementById('btnCerrarModalX');
    if (!btnNueva || !modal) return;
    function abrir()  { modal.style.display = 'flex'; }
    function cerrar() { modal.style.display = 'none'; }
    btnNueva.addEventListener('click', function(e) { e.preventDefault(); abrir(); });
    if (btnCerrar)  btnCerrar.addEventListener('click', function(e) { e.preventDefault(); cerrar(); });
    if (btnCerrarX) btnCerrarX.addEventListener('click', function(e) { e.preventDefault(); cerrar(); });
    modal.addEventListener('click', function(e) {
      if (e.target === modal) { cerrar(); }
    });
  })();
</script>

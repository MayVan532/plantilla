    <script>
            document.addEventListener('DOMContentLoaded', function() {
            // Los detalles se muestran directamente desde PHP (lc_func_detalle)

            const detalleContenedor = document.getElementById('funcionalidad-detalle');
            const detalleTitulo = document.getElementById('detalle-titulo');
            const detalleLista = document.getElementById('detalle-lista');
            
            // Función para mostrar los detalles de la funcionalidad seleccionada
            function mostrarDetalleFuncionalidad(titulo, doScroll = false) {
                if (detailData && detailData[titulo]) {
                    // Actualizar el título y la lista
                    detalleTitulo.textContent = titulo;
                    detalleLista.innerHTML = detailData[titulo].map(item => `
                        <li class="mb-4 feature-item">
                            <div class="d-flex align-items-start">
                                <span class="feature-icon">
                                    <i class="fas fa-check-circle text-primary"></i>
                                </span>
                                <span class="feature-text">${item}</span>
                            </div>
                        </li>
                    `).join('');
                    
                    // Mostrar el contenedor
                    detalleContenedor.style.display = 'block';
                    // Desplazamiento solo cuando el usuario hace click
                    if (doScroll) {
                        detalleContenedor.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }
                }
            }
            
            // Asociar clic a cada botón de funcionalidad
            const botones = document.querySelectorAll('.funcionalidad-boton');
            
            botones.forEach(btn => {
                btn.addEventListener('click', function(){
                    const titulo = this.querySelector('h3') ? this.querySelector('h3').textContent.trim() : '';
                    // Marcar activo
                    botones.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    mostrarDetalleFuncionalidad(titulo, true);
                });
            });
            
            // Mostrar por defecto la primera funcionalidad si existe
            if (botones.length > 0) {
                const firstTitle = botones[0].querySelector('h3') ? botones[0].querySelector('h3').textContent.trim() : '';
                botones[0].classList.add('active');
                // Mostrar sin desplazamiento en carga inicial
                mostrarDetalleFuncionalidad(firstTitle, false);
            }
        });
    </script>

        document.addEventListener('DOMContentLoaded', function() {
            const title = document.querySelector('.animated-title');
            if (title) {
                setTimeout(() => {
                    title.style.opacity = '0';
                    title.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    title.style.transform = 'translateY(20px)';
                    
                    setTimeout(() => {
                        title.style.opacity = '1';
                        title.style.transform = 'translateY(0)';
                    }, 100);
                }, 300);
            }
            function isElementInViewport(el) {
                const rect = el.getBoundingClientRect();
                return (
                    rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.bottom >= 0
                );
            }
            function animateOnScroll() {
                const items = document.querySelectorAll('.funcionalidad-boton');
                
                items.forEach(function(item) {
                    if (isElementInViewport(item) && !item.classList.contains('visible')) {
                        const delay = item.getAttribute('data-delay') || 0;
                        setTimeout(() => {
                            item.classList.add('visible');
                            setTimeout(() => {
                                item.style.transition = 'all 0.8s cubic-bezier(0.165, 0.84, 0.44, 1)';
                            }, 50);
                        }, delay);
                    }
                });
            }
            animateOnScroll();
            window.addEventListener('scroll', animateOnScroll);
        });
